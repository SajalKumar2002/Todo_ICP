type Task = record {
  id: nat64;
  title: text;
  is_completed: bool;
};

service : {
  "add_task": (String) -> (Task);
  "update_task": (nat64, String) -> (Task);
  "get_all_tasks": () -> (vec Task) query;
  "count_tasks": () -> (nat64) query;
  "delete_task": (nat64) -> () query;
  "toggle_is_completed" : (nat64) -> (Task);
}